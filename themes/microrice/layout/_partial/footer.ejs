<!-- Baidu Tongji -->
<% if (config.ba_track_id) { %>
<script>
    window.addEventListener('load', function () {
        var _hmt = _hmt || [];
        globalAddScript('//hm.baidu.com/hm.js?<%= config.ba_track_id %>')
    })
</script>
<% } %>
<% if (config.cnzz_track_id) { %>
<script>
    window.addEventListener('load', function () {
        globalAddScript('//s23.cnzz.com/z_stat.php?id=<%= config.cnzz_track_id %>&online=2');
    })
</script>
<% } %>
<% if (config.ba_auto_push) { %>
<!-- baidu auto push for seo -->
<script>
    window.addEventListener('load', function () {
        var src = 'http://push.zhanzhang.baidu.com/push.js'
        var curProtocol = window.location.protocol.split(':')[0];
        if (curProtocol === 'https') {
            src = 'https://zz.bdstatic.com/linksubmit/push.js';
        }
        globalAddScript(src);
    })
</script>
<% } %>
<% if (config.google_analysis) { %>
<!-- Global site tag (gtag.js) - Google Analytics -->
<script>
    window.dataLayer = window.dataLayer || [];
    function gtag() { dataLayer.push(arguments); }
    gtag('js', new Date());
    gtag('config', '<%= config.google_analysis %>');

    window.addEventListener('load', function () {
        globalAddScript('https://www.googletagmanager.com/gtag/js?id=<%= config.google_analysis %>');
    });
</script>
<% }%>